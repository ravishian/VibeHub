<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/profile_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/postImageView"
        app:layout_constraintVerticalBias="0.0"
        app:layout_constraintHorizontalBias="0.0" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        app:layout_constraintStart_toEndOf="@id/profileImageView"
        app:layout_constraintBaseline_toBaselineOf="@id/profileImageView"
        app:layout_constraintEnd_toStartOf="@id/moreImageView"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/moreImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/profileImageView"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/postImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/post_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImageView"
        app:layout_constraintDimensionRatio="H,16:9" />

    <ImageView
        android:id="@+id/likeImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_like"
        app:layout_constraintStart_toStartOf="@id/profileImageView"
        app:layout_constraintTop_toBottomOf="@id/postImageView"
        app:layout_constraintBottom_toTopOf="@id/captionTextView"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/commentImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_comment"
        app:layout_constraintStart_toEndOf="@id/likeImageView"
        app:layout_constraintTop_toBottomOf="@id/postImageView"
        app:layout_constraintBottom_toTopOf="@id/captionTextView"
        app:layout_constraintHorizontal_bias="0.1" />

    <ImageView
        android:id="@+id/shareImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_share"
        app:layout_constraintStart_toEndOf="@id/commentImageView"
        app:layout_constraintTop_toBottomOf="@id/postImageView"
        app:layout_constraintBottom_toTopOf="@id/captionTextView"
        app:layout_constraintHorizontal_bias="0.2" />

    <ImageView
        android:id="@+id/saveImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_save"
        app:layout_constraintStart_toEndOf="@id/shareImageView"
        app:layout_constraintTop_toBottomOf="@id/postImageView"
        app:layout_constraintBottom_toTopOf="@id/captionTextView"
        app:layout_constraintHorizontal_bias="0.3" />

    <TextView
        android:id="@+id/likeCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000 likes"
        app:layout_constraintStart_toEndOf="@id/profileImageView"
        app:layout_constraintTop_toBottomOf="@id/postImageView"
        app:layout_constraintBottom_toTopOf="@id/captionTextView"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/captionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This is the caption text"
        app:layout_constraintStart_toStartOf="@id/likeCountTextView"
        app:layout_constraintEnd_toStartOf="@id/timestampTextView"
        app:layout_constraintTop_toBottomOf="@id/postImageView"
        app:layout_constraintBottom_toTopOf="@id/locationTextView" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="New York, NY"
        app:layout_constraintStart_toStartOf="@id/captionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/captionTextView"
        app:layout_constraintBottom_toTopOf="@id/commentsRecyclerView" />

    <TextView
        android:id="@+id/timestampTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 hour ago"
        app:layout_constraintStart_toStartOf="@id/locationTextView"
        app:layout_constraintTop_toBottomOf="@id/locationTextView"
        app:layout_constraintBottom_toTopOf="@id/commentsRecyclerView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/timestampTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
